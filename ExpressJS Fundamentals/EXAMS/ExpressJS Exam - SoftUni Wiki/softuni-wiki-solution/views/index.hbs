<section id="featured">
    <h2>Latest article</h2>
    <article>
        <h3>{{latestArticle.title}}</h3>
        <p>
            {{latestArticle.content}}&hellip;
        </p>
        <div class="controls">
            <a href="/article/details/{{latestArticle.id}}">Read more</a>
        </div>
    </article>
</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#each recentArticles}}
        <li>
            <a href="/article/details/{{this.id}}">{{this.title}}</a>
        </li>
        {{/each}}
    </ul>
</section>