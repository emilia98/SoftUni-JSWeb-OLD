<section>
  <h2>Register</h2>
  {{#if hasError}}
  <div class="alert alert-danger">
    {{#if errors.email}}
    <div>{{errors.email}}</div>
    {{/if}} {{#if errors.name}}
    <div>{{errors.name}}</div>
    {{/if}} {{#if errors.password}}
    <div>{{errors.password}}</div>
    {{/if}} {{#if errors.repeat}}
    <div>{{errors.repeat}}</div>
    {{/if}}
  </div>
  {{/if}} {{#if cannotRegister}}
  <div class="alert alert-danger text-center">
    <h3>This email is already in use!</h3>
  </div>
  {{/if}}

  <div class="spacer">
    <form action="/register" method="POST">
      <label for="email">Email:</label>
      <input type="text" id="email" name="email" value="{{userData.email}}">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="{{userData.name}}">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" value="{{userData.password}}">
      <label id="repeat">Repeat password:</label>
      <input type="password" id="repeat" name="repeatPass">
      <input type="submit" value="Register">
    </form>
  </div>
</section>