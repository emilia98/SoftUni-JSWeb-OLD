<div class="row">
    <div class="col-12 text-center">
        <h1>Edit Review</h1>
    </div>
</div>

<div class="row">
    <div class="col-12">
        {{#if hasError}}
        <h3 class="err-msg">{{error}}</h3>
        {{/if}}
        <form action="/review/edit/{{review._id}}" method="post" class="form-horizontal" id="commentForm" role="form">
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" name="referer" value="{{referer}}" />
                    <textarea class="form-control" name="text" id="review" rows="5">{{review.text}}</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" type="submit" id="submitComment"> Add Review</button>
                </div>
            </div>
        </form>
    </div>
</div>