<div class="row">
    <div class="col-12">
        <h1>Results
            <small>search:
                <b>{{username}}</b>
            </small>
        </h1>
    </div>

    <div class="col-12 col-md-12 col-lg-12">
        <div class="row">
            {{#each users}}
            <div class="col-3 col-md-3 col-lg-3 results">
                <h3>{{username}}</h3>
                <div class="form-group">
                    <a href="/thread/{{username}}">
                        <button class="btn btn-primary btn-sm">Chat</button>
                    </a>

                    <form action="/users/block/{{id}}" method="POST" class="block">
                        <input type="hidden" name="exploreUrl" value="{{../exploreUrl}}" /> 
                       {{#if isBlocked}}
                            <a>

                            <button type="submit" class="btn btn-danger btn-sm block-btn">Unblock</button>
                            </a>
                        
                        {{else}}
                       
                            <button  type="submit" class="btn btn-info btn-sm block-btn">Block</button>
                        
                        {{/if}}
                    </form>

                </div>
            </div>
            {{else}}
            <h2> No results</h2>
            {{/each}}
        </div>
    </div>
</div>