<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <h1 class="text-center">
            Choose a category and explore hotels
        </h1>

        <div class="row">
            {{#each categories}}
            <div class="col-3 col-md-3 col-lg-3 results">

                <div class="form-group">
                    <h3>
                        <a href="/list/category/{{title}}">
                            {{title}}
                        </a>
                    </h3>
                </div>
            </div>
            {{else}}
            <div class="col-12 col-md-12 col-lg-12">
                <h2 class="text-center"> No results</h2>
            </div>
            {{/each}}
        </div>
    </div>
</div>