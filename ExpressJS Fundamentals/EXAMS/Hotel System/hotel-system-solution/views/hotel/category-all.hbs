<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <h1>
        List All categories from 
        <span class="badge badge-info">{{category}}</span>
    </h1>
    </div>
     
</div>
<div class="row">
    {{#each hotels}}
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
            <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <div>
                    <h6>Views: <span class="badge badge-dark">{{views}}</span></h6>
                    <h6>Likes:  <span class="badge badge-info">{{likes.length}}</span></h6>
                </div>
                <a href="/hotel/{{_id}}/{{title}}" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-12 col-md-12 col-lg-12">
        <h2>No hotels found</h2>
    </div>
    {{/each}}
</div>