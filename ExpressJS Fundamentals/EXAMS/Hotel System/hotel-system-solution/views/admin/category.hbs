<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <h1 class="text-center">
            Manage Categories
            <a href="/admin/category/new" class="btn btn-success btn-lg">
                Create New
            </a>

        </h1>

        <div class="row">
            {{#each categories}}
            <div class="col-3 col-md-3 col-lg-3 results">

                <div class="form-group">
                    <h3>{{title}}
                        <a href="/admin/category/delete/{{_id}}">
                            <button class="btn btn-danger btn-lg">Delete</button>
                        </a>
                    </h3>

                </div>
            </div>
            {{else}}
            <div class="col-12 col-md-12 col-lg-12">
                <h2 class="text-center"> No results</h2>
            </div>
            {{/each}}
        </div>
    </div>
</div>