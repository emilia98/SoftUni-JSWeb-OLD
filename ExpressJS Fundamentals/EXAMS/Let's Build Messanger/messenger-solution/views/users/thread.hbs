<div class="row">
    {{#if hasError}}

    <div class="col-12 col-md-12 col-lg-12">
        <h2 class="err-msg text-center">
            {{error}}
        </h2>
    </div>

    {{else}}
    <div class="col-12 col-md-12 col-lg-12">
        <h3 class=" text-center">Messaging</h3>
        <div class="messaging">
            <div class="inbox_msg">
                <div class="mesgs">
                    <div class="msg_history">
                        {{#each messages}} {{#if isIncoming}}
                        <div class="incoming_msg">
                            <div class="received_msg">
                                <small class="text-muted sender">{{sender}}</small>
                                <div class="received_withd_msg">
                                    {{#if isLink}}
                                    <div>
                                        <a href="{{text}}" target="_blank">{{text}}</a>
                                    </div>
                                    {{/if}} {{#if isImage}}
                                    <img src="{{text}}" alt="image/"> {{/if}} {{#if onlyText}}
                                    <p>{{text}}</p>
                                    {{/if}}
                                    <div class="time_date">
                                        {{date}}

                                    </div>
                                    <form action="/message/like/{{id}}" method="POST">
                                        <input type="hidden" name="threadPath" value="{{../threadPath}}" /> {{#if isLiked}}
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            Dislike
                                        </button>
                                        {{else}}
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            Like
                                        </button>
                                        {{/if}}
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="outgoing_msg">
                            <div class="sent_msg">
                                <small class="text-muted sender">{{sender}}</small>
                                {{#if isLink}}
                                <div>
                                    <a href="{{text}}" target="_blank">{{text}}</a>
                                </div>
                                {{/if}} {{#if isImage}}
                                <img src="{{text}}" alt="image/"> {{/if}} {{#if onlyText}}
                                <p>{{text}}</p>
                                {{/if}}
                                <div class="time_date">
                                    <span>{{date}}</span>
                                    {{#if isLiked}}
                                    <div class="like">
                                        <span class="strong-text">{{../partnerUsername}}</span> liked this.
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{/if}} {{else}}
                        <h3 class="error-info text-center">
                            No messages to show
                        </h3>
                        {{/each}}

                    </div>
                    <div class="type_msg">
                        {{#if isBlocked}}
                        <h2>The Thread is blocked</h2>
                        {{else}}
                        <div class="input_msg_write">
                            <form method="POST">
                                <input type="text" class="write_msg" placeholder="Type a message" name="message" value="{{message}}" />
                                <input type="hidden" name="senderId" value="{{info.senderId}}" />
                                <input type="hidden" name="recipientId" value="{{info.recipientId}}" />
                                <input type="hidden" name="threadId" value="{{info.threadId}}" />
                                <button class="msg_send_btn" type="submit">
                                    <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                                </button>
                                {{#if invaidMessage}}
                                <div class="err-msg">{{errorMsg}}</div>
                                {{/if}}
                            </form>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
</div>