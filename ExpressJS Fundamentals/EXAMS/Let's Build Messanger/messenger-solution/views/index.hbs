{{#if user}}
<div class="jumbotron">
    <h1 class="display-4">Messenger</h1>
    <p class="lead">
        <form action="/explore/users" method="GET">
            <div>
                <h3>
                    Search User(s)
                </h3>
            </div>
            <div class="form-group">
                <input type="text" name="username" class="form-control form-control-lg" placeholder="Search...">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </form>
    </p>
    <div>
    </div>
</div>
{{else}}
<div class="jumbotron">
    <h1 class="display-4">Welcome To Messenger</h1>
    <p class="lead">Minimalistic chat app.</p>
</div>
{{/if}}